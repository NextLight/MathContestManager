<UserControl x:Class="MathContestManager.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MathContestManager"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300" Loaded="Page_Loaded">

    <Grid>
        <Button Name="btnCreateNewMatch" Margin="0, 100, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Create new match" FontSize="20" Height="50" Click="btnCreateNewMatch_Click"/>
        <Button Name="btnLoadMatch" Margin="0, 0, 0, 100" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Load saved match" FontSize="20" Height="50"/>
    </Grid>
</UserControl>
