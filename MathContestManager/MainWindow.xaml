<MahControls:MetroWindow x:Name="winMain" x:Class="MathContestManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:MahControls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:MathContestManager"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        Title="Math Contest Manager" Height="350" Width="525" WindowState="Maximized" Loaded="winMain_Loaded">
    <Grid>
        <Grid x:Name="grdStart" Visibility="Hidden">
            <Button Name="btnCreateNewMatch" Margin="0 100 0 0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Create new match" FontSize="20" Height="50" Click="btnCreateNewMatch_Click"/>
            <Button Name="btnLoadMatch" Margin="0 0 0 100" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Load saved match" FontSize="20" Height="50"/>
        </Grid>
        <Grid x:Name="grdInsertTeams">
            <ScrollViewer Name="scrInsertTeams" IsTabStop="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0, 0, 0, 100" CanContentScroll="True" VerticalScrollBarVisibility="Auto">
                <ItemsControl IsTabStop="False" Name="itcInsertTeams" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0" />
            </ScrollViewer>
            <Button Name="btnInsertTeamsSubmit" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Center" Content="Submit" FontSize="20" Click="btnInsertTeamsSubmit_Click"/>
        </Grid>
        <Grid x:Name="grdInsertProblems">
            <ScrollViewer Name="scrInsertProblems" IsTabStop="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0, 0, 0, 100" CanContentScroll="True" VerticalScrollBarVisibility="Auto">
                <ItemsControl IsTabStop="False" Name="itcInsertProblems" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0" />
            </ScrollViewer>
            <Button Name="btnInsertProblemsSubmit" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Center" Content="Submit" FontSize="20" Click="btnInsertProblemsSubmit_Click"/>
        </Grid>
    </Grid>
</MahControls:MetroWindow>
