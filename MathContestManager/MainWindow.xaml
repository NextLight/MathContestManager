<MahControls:MetroWindow x:Name="winMain" x:Class="MathContestManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:MahControls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:MathContestManager"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        BorderBrush="{DynamicResource AccentColorBrush}"
        BorderThickness="1"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        Title="Math Contest Manager" Height="350" Width="525" Loaded="winMain_Loaded">
    <Grid>
        <Grid x:Name="grdStart" Visibility="Hidden">
            <Button Name="btnCreateNewMatch" Margin="0 100 0 0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Create new match" FontSize="20" Height="50" Click="btnCreateNewMatch_Click"/>
            <Button Name="btnLoadMatch" Margin="0 0 0 100" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Load saved match" FontSize="20" Height="50"/>
        </Grid>
        <Grid x:Name="grdInsertTeams">
            <ScrollViewer IsTabStop="False" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="0,0,0,50" CanContentScroll="True" VerticalScrollBarVisibility="Auto">
                <ItemsControl IsTabStop="False" Name="itcTeams" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0" >
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBox FontSize="17" Text="{Binding Name}" Margin="10" Width="100" md:TextFieldAssist.Hint="Team Name" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Loaded="TextBox_Loaded" />
                                <Button Click="ButtonDelete_Click" Focusable="False" Margin="10">
                                    <Button.Content>
                                        <md:PackIcon Kind="Delete"/>
                                    </Button.Content>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <Button Name="btnAddItemTeam" Margin="50,0,0,30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="120" Height="40" Content="New Team"  IsDefault="True" FontSize="17" Click="btnAddItemTeam_Click"/>
            <Button Name="btnInsertTeams" Margin="0,0,50,30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="60" Height="40" FontSize="20" Click="btnInsertTeams_Click" >
                <md:PackIcon Kind="Send" />
            </Button>
        </Grid>
        <Grid x:Name="grdInsertTasks">
            <ScrollViewer IsTabStop="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0, 0, 0, 100" CanContentScroll="True" VerticalScrollBarVisibility="Auto">
                <ItemsControl IsTabStop="False" Name="itcTasks" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="0" >
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBox Text="{Binding Answer}" Width="100" MaxLength="4" Margin="10" md:TextFieldAssist.Hint="Answer" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontSize="17" Loaded="TextBox_Loaded" />
                                <TextBox Text="{Binding Score}" Width="100" MaxLength="3" Margin="10" md:TextFieldAssist.Hint="Score" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontSize="17" />
                                <Button Margin="10" Focusable="False" Click="ButtonDelete_Click" >
                                    <Button.Content>
                                        <md:PackIcon Kind="Delete"/>
                                    </Button.Content>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <Button Name="btnAddItemTask" Margin="50,0,0,30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="120" Height="40" Content="New Task" IsDefault="True" FontSize="17" Click="btnAddItemTask_Click"/>
            <Button Name="btnInsertTasks" Margin="0,0,50,30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="60" Height="40" FontSize="20" Click="btnInsertTasks_Click" >
                <md:PackIcon Kind="Send" />
            </Button>
        </Grid>
    </Grid>
</MahControls:MetroWindow>
